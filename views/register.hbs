<div id="page-inner">
    <div class="row">
        <div class="col-md-12">
            <h2>Create Admin Account </h2>
            <h5>Welcome to my web , Love to see you back! </h5>

        </div>
    </div>
    <!-- /. ROW  -->
    <hr />

    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">

                <div class="panel-body">
                <div class="reg">
                                <h3>Create Admin Account</h3>
                                <p style="margin-top: -20px;margin-bottom: 30px">Welcome, please enter the following details to continue.</p>
                                <form action="/register" method="POST" autocomplete="off">
                                    <input type="hidden" name="_id" value="{{admin._id}}">

                                        <div class="form-group">
                                            <label> Username </label>
                                            <input type="text" class="form-control" placeholder="Username" name="username" value="{{admin.username}}">
                                        </div>

                                        <div class="form-group">
                                            <label> Email </label>
                                            <input type="text" class="form-control" placeholder="Email" name="email" value="{{admin.email}}">
                                        </div>

                                        <div class="form-group">
                                            <label> Name </label>
                                            <input type="text" class="form-control" placeholder="Name" name="name" value="{{admin.name}}">
                                        </div>

                                        <div class="form-group">
                                            <label> Password </label>
                                            <input type="text" class="form-control" placeholder="Password" name="password" value="{{admin.password}}">
                                        </div>

                                        <div class="form-group">
                                            <label> Mobilephone </label>
                                            <input type="text" class="form-control" placeholder="Mobilephone" name="number" value="{{admin.number}}">
                                        </div>

                                        <input type="submit" style="margin-left: 480px" class="btn btn-primary" value="Submit">

                                    </form>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Form Elements -->
    </div>
</div>
<!-- /. ROW  -->
</div>
</div>
</div>
