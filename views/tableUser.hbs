<div id="page-inner">
    <div class="row">
        <div class="col-md-12">
            <h2>List Of Users </h2>
            <h5>Welcome to my web, Love to see you back! </h5>

        </div>
    </div>
    <!-- /. ROW  -->
    <hr />

    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    List of Users
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class ="dataTables_wrapper form-inline" role="grid">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div id="dataTables-example_filter" class="dataTables_filter"></div>
                                </div>
                            </div>
                        </div>
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead class="thead thead-dark">
                            <tr>
                                <th  scope="col">Username</th>
                                <th  scope="col">Password</th>
                                <th  scope="col">View</th>
                                <th  scope="col">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each user}}
                                <tr>
                                    <td class="small" >{{this.username}}</td>
                                    <td class="small">{{this.password}}</td>
                                    <td>
                                    <a class="btn btn-info " href="/ViewUser/{{this._id}}" >
                                        <i class="fa fa-clipboard"></i>
                                        View
                                    </a>
                                    </td>
                                    <td>

                                        <a class="btn btn-success" style="margin-bottom: 5px" href="/users/{{this._id}}" >
                                            <i class="fa fa-refresh"></i>
                                            Update
                                        </a>
                                        <a class="btn btn-danger" style="margin-bottom: 5px" href="/users/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record');">
                                            <i class="fa fa-edit"></i>
                                            Delete</a>

                                        <a class="btn btn-danger" style="margin-bottom: 5px" href="/users/ban/{{this._id}}" onclick="return confirm('Are you sure to ban');">
                                            <i class="fa fa-ban"></i>
                                            Ban</a>
                                    </td>



                                </tr>
                            {{/each}}

                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_info" id="dataTables-example_info" role="alert" aria-live="polite" aria-relevant="all">
                                    Showing products
                                </div>
                            </div>
                            <nav aria-label="...">
                                <ul class="pagination pagination-lg">
                                    <li class="page-item"><a class="page-link" href="/tableUser?page=1" tabindex="-1">1</a></li>
                                    <li class="page-item"><a class="page-link" href="/tableUser?page=2">2</a></li>
                                    <li class="page-item"><a class="page-link" href="/tableUser?page=3">3</a></li>
                                    <li class="page-item"><a class="page-link" href="/tableUser?page=4">4</a></li>
                                    <li class="page-item"><a class="page-link" href="/tableUser?page=5">5</a></li>
                                    <li class="page-item"><a class="page-link" href="/tableUser?page=6">6</a></li>
                                    <li class="page-item"><a class="page-link" href="/tableUser?page=7">7</a></li>
                                    <li class="page-item"><a class="page-link" href="/tableUser?page=8">8</a></li>
                                    <li class="page-item"><a class="page-link" href="/tableUser?page=9">...</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>

</div>